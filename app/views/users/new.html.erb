<div class="container">
    <!-- Example row of columns -->
    <div class="row">
    
<div class="col-md-10 col-md-offset-1">
<h2>Sign Up</h2>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4>Please check for the errors and retry.</h4>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-4">
   <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name,:placeholder => "First Name", :class => "form-control" %>
  </p>
   <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name,:placeholder => "Last Name ", :class => "form-control" %>
  </p>
  <p>
    <%= f.label "Username" %><br />
    <%= f.text_field :profile_name,:placeholder => "Username", :class => "form-control" %>
  </p>
  </div>
  <div class="col-md-5 col-md-offset-1">
  <p>
    <%= f.label "Email *" %><br />
    <%= f.text_field :email, :placeholder => "Email",:class => "form-control" %>
  </p>
  
  <p>
    <%= f.label "Password *" %><br />
    <%= f.password_field :password,:placeholder => "Password", :class => "form-control" %>
  </p>
  <p>
    <%= f.label "Password Confirmation *" %><br />
    <%= f.password_field :password_confirmation,:placeholder => "Password Confirmation", :class => "form-control" %>
  </p>
  <%= f.submit "Sign Up", :class => "btn btn-success"%>
  </div>
<% end %>
</div>
</div>
</div>
